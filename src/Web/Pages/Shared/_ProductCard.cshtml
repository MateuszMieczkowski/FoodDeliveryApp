@using Web.Api.Models.ProductDtos
@model ProductDto
<div class="row mt-3 justify-content-center">
	<div class="col">
		<div class="card mb-3 mx-auto" style="max-width: 600px;">
			<div class="row g-0">
				<div class="col-md-4">
					<img src="https://picsum.photos/300" class="img-fluid rounded-start" alt="@Model.Name">
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title">@Model.Name</h5>
						<p class="card-text">@Model.Description</p>
						<h6> class="card-text">@Model.Price.ToString("c")</h6>
						<a class="card-link btn btn-outline-primary">Add to cart</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>