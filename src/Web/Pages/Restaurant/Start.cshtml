@page
@model             StartModel

<div class="container">
	<div class="row">
		<div class="col">
			<h1 class="text-dark text-center">Enter city</h1>
		</div>
	</div>
	<form method="post" role="form">
		<div class="row justify-content-center">
			<div class="col-1">
				</div>
			<div class="col-5">
				<input type="text" name="City" class="form-control"/>
				<span asp-validation-for="@Model.City" class="text-danger"></span>
			</div>
			<div class="col-1">
				<button type="submit" class="btn btn-outline-dark p-2">Search</button>
			</div>
		</div>
	</form>
</div>
@section Scripts
{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}